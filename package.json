{
  "name": "ai-powered-construction-erp",
  "version": "1.0.0",
  "description": "Enterprise-grade AI-Powered Construction ERP with Supply Chain Optimization, Voice AI, Predictive Maintenance, and Advanced Security",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "ts-node-dev --respawn --transpile-only main.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docker:build": "docker build -t construction-erp .",
    "docker:run": "docker run -p 3000:3000 construction-erp",
    "docker:compose": "docker-compose up -d",
    "docker:logs": "docker-compose logs -f",
    "docker:stop": "docker-compose down",
    "deploy:aws": "aws ecs update-service --cluster construction-erp-cluster --service construction-erp-service --force-new-deployment",
    "deploy:gcp": "gcloud run deploy construction-erp --source .",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop construction-erp",
    "pm2:restart": "pm2 restart construction-erp",
    "pm2:logs": "pm2 logs construction-erp",
    "health:check": "curl -f http://localhost:3000/health || exit 1"
  },
  "keywords": [
    "construction",
    "erp",
    "ai",
    "supply-chain",
    "voice-ai",
    "predictive-maintenance",
    "security",
    "fraud-detection",
    "typescript",
    "enterprise"
  ],
  "author": "Your Company",
  "license": "MIT",
  "dependencies": {
    "@varld/warp": "^2.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "ws": "^8.14.2",
    "socket.io": "^4.7.4",
    "redis": "^4.6.11",
    "sharp": "^0.32.6",
    "csv-parser": "^3.0.0",
    "xlsx": "^0.18.5",
    "qrcode": "^1.5.3",
    "axios": "^1.6.2",
    "natural": "^6.8.0",
    "sentiment": "^5.0.2",
    "ml-matrix": "^6.10.4",
    "simple-statistics": "^7.8.3",
    "node-cron": "^3.0.3",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "node-cache": "^5.1.2",
    "rate-limiter-flexible": "^4.0.1",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "@types/ws": "^8.5.10",
    "@types/qrcode": "^1.5.5",
    "@types/jest": "^29.5.8",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
