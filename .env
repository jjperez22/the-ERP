# ================================
# AI-Powered Construction ERP
# Environment Configuration
# ================================

# Database Configuration
# This will be overridden by Render.com environment variables in production
DATABASE_URL="postgresql://username:password@localhost:5432/construction_erp"
# Render will provide this automatically
# DATABASE_URL will be set by Render's managed PostgreSQL service

# AI Services
OPENAI_API_KEY="your-openai-api-key-here"

# Application Settings
PORT=3000
NODE_ENV=development

# Security
JWT_SECRET="your-super-secure-jwt-secret-key-minimum-32-characters"

# Redis Configuration (for real-time features and caching)
REDIS_URL="redis://localhost:6379"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Logging Level
LOG_LEVEL="info"

# API Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX="100"

# File Upload Configuration
MAX_FILE_SIZE="10485760"
UPLOAD_PATH="./uploads"

# Feature Flags
ENABLE_AI_FEATURES="true"
ENABLE_REAL_TIME="true"
ENABLE_AUTOMATION="true"
ENABLE_ANALYTICS="true"
