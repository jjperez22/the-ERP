{
  "name": "construction-materials-erp",
  "version": "2.0.0",
  "description": "AI-Powered Construction ERP - Revolutionary construction materials management system with intelligent automation, real-time insights, and predictive analytics",
  "main": "dist/main.js",
  "scripts": {
    "build": "prisma generate && tsc && npm run build:client",
    "postinstall": "prisma generate",
    "prebuild": "prisma generate",
    "build:client": "webpack --mode production",
    "start": "node start-production.js",
    "start:simple": "node dist/main.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "ts-node-dev --respawn --transpile-only main.ts",
    "dev:client": "webpack serve --mode development",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "docker:build": "docker build -t construction-erp .",
    "docker:run": "docker run -p 3000:3000 construction-erp",
    "deploy": "npm run build && npm run docker:build",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.0",
    "openai": "^4.20.0",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.0",
    "socket.io": "^4.7.0",
    "ioredis": "^5.3.0",
    "bull": "^4.10.0",
    "axios": "^1.5.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "winston": "^3.10.0",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "joi": "^17.9.0",
    "multer": "1.4.5-lts.1",
    "sharp": "^0.32.0",
    "pdf-kit": "^0.13.0",
    "exceljs": "^4.3.0",
    "rate-limiter-flexible": "^3.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/nodemailer": "^6.4.9",
    "@types/lodash": "^4.14.195",
    "@types/multer": "^1.4.7",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.1.0",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.0.0",
    "jest": "^29.6.0",
    "@types/jest": "^29.5.0",
    "supertest": "^6.3.0",
    "@types/supertest": "^2.0.12",
    "ts-jest": "^29.1.0",
    "jest-extended": "^4.0.0",
    "prisma": "^5.0.0",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "prettier": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0",
    "ts-loader": "^9.4.0",
    "html-webpack-plugin": "^5.5.0",
    "css-loader": "^6.8.0",
    "style-loader": "^3.3.0",
    "sass-loader": "^13.3.0",
    "sass": "^1.64.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "@babel/preset-typescript": "^7.22.0",
    "babel-loader": "^9.1.0",
    "concurrently": "^8.2.0",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yamljs": "^0.2.31"
  },
  "keywords": [
    "erp", 
    "construction", 
    "materials", 
    "ai", 
    "artificial-intelligence", 
    "automation", 
    "real-time", 
    "analytics", 
    "typescript", 
    "react", 
    "websocket",
    "machine-learning",
    "predictive-analytics",
    "inventory-management",
    "supply-chain"
  ],
