    "type": "git",
    "url": "git+https://github.com/jjperez22/the-ERP.git"
  },
  "bugs": {
    "url": "https://github.com/jjperez22/the-ERP/issues"
  },
  "homepage": "https://github.com/jjperez22/the-ERP#readme",
